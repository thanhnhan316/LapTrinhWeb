@model SV18T1021214.Web.Models.ShipperPaginationResult
@{
    ViewBag.Title = "Người giao hàng";
}

<!-- search form -->
<form action="#" method="get">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Search..." autofocus value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit" name="searchValue" id="search-btn" class="btn btn-flat btn-primary">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/shipper/createshipper" class="btn btn-flat btn-primary" style="margin-left:5px">Bổ sung</a>
        </span>
    </div>
</form>
<p>có tổng cộng <b>@Model.RowCount</b> người giao hàng trong <b>@Model.PageCount</b> trang</p>
<div class="table-responsive" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead class="btn-primary">
            <tr>
                <th>Tên người giao hàng</th>
                <th>Số điện thoại</th>

                <th style="width:70px"></th>
            </tr>
        </thead>
        
        @foreach (var item in Model.Data)
        {
            <tbody>
            <td>@item.ShipperName</td>
            <td>@item.Phone</td>


            <td>
                <a href="~/shipper/editshipper/@item.ShipperID" class="btn btn-xs btn-success">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="~/shipper/deleteshipper/@item.ShipperID" class="btn btn-xs btn-danger">
                    <i class="fa fa-remove"></i>
                </a>
            </td>
            </tbody>
        }
    </table>
    <div style="text-align: center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="~/shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }

            }
        </ul>

    </div>

