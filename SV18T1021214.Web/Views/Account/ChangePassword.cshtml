
@{
    ViewBag.Title = "Thay đổi mật khẩu";
}

<form  class="form-horizontal" id="changePassword" action="~/account/changepassword">

    <div class="form-group">
        <label class="control-label col-sm-2">Mật khẩu mới:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="password" autofocus value="@ViewBag.Password">
            @Html.ValidationMessage("password", "", new { @style = "color:red" })

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Nhập lại:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="repassword" value="@ViewBag.rePassword">
            @Html.ValidationMessage("repassword", "", new { @style = "color:red" })

        </div>
    </div>
    <div style="padding-left:250px" class="form-group col-sm-10">
        @if (@ViewBag.Success == 0)
        {
            <p style="color:red"> @ViewBag.Massage</p>}
        else
        {
            <p style="color:green"> @ViewBag.Massage</p>
        }


    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ mật khẩu
            </button>
            <a class="btn btn-warning" href="~/">
                <i class="fa fa-ban"></i> Quay lại
            </a>
        </div>
    </div>

</form>

