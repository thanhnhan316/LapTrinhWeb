@model SV18T1021214.DomainModel.Employee

<div class="container">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/employee/save" method="post">
                @Html.HiddenFor(m => m.EmployeeID)
                <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Họ :</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Tên :</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Ngày Sinh:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" }) 
                            @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Ảnh:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Ghi chú</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" >Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">

                                <i class="fa fa-save"></i>Lưu dữ liệu
                            </button>
                            <a href="~/employee" class="btn btn-warning">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>

                </div>


            </form>
        </div>

    </div>


</div>



