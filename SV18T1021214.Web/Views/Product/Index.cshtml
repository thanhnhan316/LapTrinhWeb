@model  SV18T1021214.Web.Models.ProductPaginationResult
@{
    ViewBag.Title = "Mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form action="#" method="get">
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Loại hàng --</option>
                        <option>Mỹ phẩm</option>
                        <option>Thực phẩm</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Nhà cung cấp --</option>
                        <option>Công ty TNHH Thành Công</option>
                        <option>Vina Foods</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên hoặc giá tìm kiếm" autofocus value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/product/create"
                           class="btn btn-flat btn-primary"
                           style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </div>
        </form>

        <p>có tổng cộng <b>@Model.RowCount</b> mặt hàng trong <b>@Model.PageCount</b> trang</p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th style="width:80px">Ảnh</th>
                        <th>Tên mặt hàng</th>
                        <th>Đơn vị tính</th>
                        <th>Giá</th>
                        <th style="width:75px">&nbsp;</th>
                    </tr>
                </thead>
                
                    @foreach (var item in Model.Data)
                    {
                    <tbody>
                        <tr>
                            <td>
                                <img src="~/images/Products/@item.Photo" style="width:80px" />
                            </td>
                            <td style="vertical-align:middle">@item.ProductName</td>
                            <td style="vertical-align:middle">@item.Unit</td>
                            <td style="vertical-align:middle">@item.Price</td>
                            <td class="text-right" style="vertical-align:middle">
                                <a href="~/product/edit/@item.ProductID" class="btn btn-xs btn-success">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/product/delete/@item.ProductID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                      
                    
                    </tbody>}                 
                </table>
        </div>
    </div>

    <div style="text-align: center">
        <ul class="pagination">
            @for (int i = 1; i <= @Model.PageCount; i++)
            {
                if (i == @Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="~/product?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }

            }
        </ul>

    </div>
</div>

