@model SV18T1021214.DomainModel.ProductPhoto

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/savephoto" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(m => m.PhotoID)
            @Html.HiddenFor(m => m.ProductID)
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.Photo)
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo2').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (Model.Photo != null)
                    {
                        <img id="Photo2" src="~/Images/ProductPhotos/@Model.Photo" class="img img-bordered" style="width:200px" />
                    }
                    else
                    {
                        <img id="Photo2" src="~/Images/NoImg.jpg" class="img img-bordered" style="width:200px" />
                    }
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:red;font-style:italic;" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:red;font-style:italic;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder">
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color:red;font-style:italic;" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    <label>@Html.CheckBoxFor(m => m.IsHidden) Ẩn ảnh (không hiển thị với khách hàng)</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

