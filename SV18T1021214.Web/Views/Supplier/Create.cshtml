@model SV18T1021214.DomainModel.Supplier
@{
    ViewBag.Title = "Bổ sung nhà cung cấp";
}

<div class="container">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/supplier/save" method="post">
                <input type="hidden" name="SupplierID" value="@Model.SupplierID " />
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên nhà cung cấp:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên liên lạc:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
                            @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                        <div class="col-sm-10">

                            @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Thành phố:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control"})
                            @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#f00" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã bưu chính</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                          
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Số điện thoại</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">

                                <i class="fa fa-save"></i>Lưu dữ liệu
                            </button>
                            <a href="~/supplier" class="btn btn-warning">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>

                </div>


            </form>
        </div>

    </div>


</div>



