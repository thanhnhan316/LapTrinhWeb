@model SV18T1021214.Web.Models.ShupplierPaginationResult
@{
    ViewBag.Title = "Nhà cung cấp";
}

<!-- search form -->
<form action="#" method="get" class="">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Search..." autofocus value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-primary">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/supplier/create" class="btn btn-flat btn-primary" style="margin-left:5px">
                Bổ sung nhà cung cấp
            </a>
        </span>
    </div>
</form>

<p>
    Có tổng cộng <b>@Model.RowCount</b> nhà cung cấp trên tổng số <b>@Model.PageCount</b> trang
</p>
<div class="table-responsive" style="margin-top:10px">
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <th>Tên nhà cung cấp</th>
        <th>Tên liên lạc</th>
        <th>Địa chỉ</th>
        <th>Quốc gia</th>
        <th>Mã bưu chính</th>
        <th>Thành phố</th>
        <th>Số điện thoại</th>
        <th style="width:80px"></th>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.PostalCode</td>
                    <td>@item.Country</td>
                    <td>@item.Phone</td>
                    <td class="text-right">
                        <a href="~/supplier/edit/@item.SupplierID" class="btn btn-xs btn-success">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/supplier/delete/@item.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">

    <ul class="pagination">

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a>@i</a></li>
            }
            else
            {
                <li><a href="~/supplier?page=@i&searchValue=@Model.SearchValue">@i</a></li>
            }

        }

    </ul>
</div>



