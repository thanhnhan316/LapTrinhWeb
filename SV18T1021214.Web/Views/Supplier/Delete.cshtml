@model SV18T1021214.DomainModel.Supplier
@{
    ViewBag.Title = "Delete ";
}
<div class="container">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/supplier/delete/@Model.SupplierID" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên nhà cung cấp:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.SupplierName</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên liên lạc:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.ContactName</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.Address</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">

                            <p class="form-control-static">@Model.Country </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Thành phố:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.City</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Mã bưu chính</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.PostalCode</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Số điện thoại</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.Phone</p>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @if (SV18T1021214.BusinessLayer.CommonDataService.InUsedSupplier(Model.SupplierID))
                            {
                                <p class="text-danger">không được xoá nhà cung cấp  này !</p>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-warning">

                                    <i class="fa fa-save"></i>Đồng ý xoá
                                </button>
                            }

                            <a href="~/supplier" class="btn btn-yahoo">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>

                </div>


            </form>
        </div>

    </div>


</div>


