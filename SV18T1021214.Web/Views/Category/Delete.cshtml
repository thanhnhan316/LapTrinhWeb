@model SV18T1021214.DomainModel.Category
@{
    ViewBag.Title = "Delete ";
}

<div class="container">
    <div class="box box-primary">
        <div class="box-header with-border">
            <form class="form-horizontal" action="~/category/delete/@Model.CategoryID" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên loại hàng:</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.CategoryName</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Thông tin loại hàng</label>
                        <div class="col-sm-10" style="border-bottom:1px dotted #808080">
                            <p class="form-control-static">@Model.Description</p>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @if (SV18T1021214.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                            {
                                <p class="text-danger">không được xoá loại hàng này !</p>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-warning">

                                    <i class="fa fa-save"></i>Đồng ý xoá
                                </button>
                            }

                            <a href="~/category" class="btn btn-yahoo">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>

                </div>


            </form>
        </div>

    </div>


</div>





